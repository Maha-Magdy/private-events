<h1>Event Details</h1>
<h2><%= @event.name %></h2>
<h4>Date: <%= @event.date %></h4>
<h5>Host: <%= @creator %></h5>
<h5>Atendees:-</h5>
<ul>
  <% @event.attendees.each do |attendee| %>
    <li> <%= attendee.name %> </li>
  <% end %>
</ul>

<% if @event.creator != current_user %>
<%= button_to "Enroll", enrollments_path({"enrollment"=> {user_id: current_user.id, event_id: @event.id}}) %>
<% end %>
